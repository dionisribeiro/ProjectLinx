@model ProjectLinx.Presentation.ViewModels.LoginViewModel
@{
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Login/Login.css" />
    <link rel="stylesheet" href="~/css/site.min.css" />
    <title>Login - ProjectLinx</title>


</head>
<body>
    <div class="container-fluid">
        <div class="container-login">
            <div class="logo-login">
                <img src="~/images/LogoLinx.png" />
                <span class="bold-titles">Projeto Linx</span>
            </div>
            <br />

            @* Div Login*@
            <div class="container-login-js">
                <div id="getin">
                    <span id="titulo-email" class="bold-titles">Entrar</span>
                </div>
                <br />

                <form asp-action="Index" asp-controller="Login" method="POST" id="form-login">
                    <div class="form-group">
                        <span id="informe-email">Digite seu e-mail</span>
                        <input type="email" id="input-email" class="form-control" asp-for="Email" autofocus required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <span id="informe-senha">Digite sua senha</span>
                        <input id="input-senha" type="password" asp-for="Senha" class="form-control" autofocus required>
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>

                    <br />

                    <div class="form-group">
                        <button type="submit" id="btn-login-entrar" class="btn btn-primary btn-block">Entrar</button>
                    </div>
                </form>
            </div>
            @*Fechamento Div Login*@
        </div>
    </div>
    <partial name="Footer" />

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/js/Header/Header.js"></script>
    </environment>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>



</body>
</html>



