@model ProjectLinx.Presentation.ViewModels.UsuarioViewModel

<link rel="stylesheet" href="~/css/Usuario/Form.css" />

<div class="row" id="form-usuario">
    <div class="col-md-6">
        <div class="form-group">
            <label for="name">Nome</label>
            <input type="text" class="form-control" asp-for="Nome" required/>
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label for="password">Senha</label>
            <input type="password" class="form-control" asp-for="Senha" />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="row" id="save-user-registration">
    <div class="col-md-12">
        <div id="no-padding" class="col-md-3">
            <button id="btn-salvar" value="Create" type="submit" class="btn btn-primary">Salvar</button>
        </div>

        <div class="col-md-3">
            <button id="btn-delete" class="btn btn-default btn-voltar-edit btn-voltar-create">Cancelar</button>
        </div>
    </div>
</div>