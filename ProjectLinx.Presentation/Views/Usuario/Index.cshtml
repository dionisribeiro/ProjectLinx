@model List<ProjectLinx.Presentation.ViewModels.UsuarioViewModel>

@{
    ViewBag.Title = "Usuário";
}
<link rel="stylesheet" href="~/css/Usuario/Index.css" />

<div class="row">
    <div class="col-md-12">
        <div class="title-pages">Usuários</div>
    </div>
</div>

<form asp-action="Pesquisar" asp-controller="Usuario" method="POST">

    <div class="row">
        <div class="col-md-12">
            <span id="pesquisar-nome">Pesquisar por nome</span>
        </div>
    </div>
    <div class="row">
        <div id="search" class="form-group col-md-4">
            <input type="text" class="form-control" name="busca" />
        </div>
        <div class="form-group col-md-2 no-padding">
            <input type="submit" class="btn btn-primary" value="Pesquisar" />
        </div>

        <div class="form-group col-md-2 col-md-offset-4 no-padding" id="register-user">
            <a href="~/Usuario/Create" class="btn btn-primary">Cadastrar usuário</a>
        </div>
    </div>
</form>

<div class="row" id="table-height">
    <div class="col-md-12">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="borda-tabela-usuario">
                        <td class="col-md-6">@item.Nome</td>
                        <td class="col-md-6">@item.Email</td>
                        <td id="edit-hidden">@item.Senha</td>
                        <td class="col-md-6" title="Editar"><a asp-action="Edit" asp-route-id="@item.UsuarioId"><span id="edit-pencil" class="glyphicon glyphicon-pencil"></span></a></td>
                        <td class="col-md-6">|</td>
                        <td class="col-md-6" title="Excluir"><a class="excluir-usuario" usuarioId="@item.UsuarioId"><span id="btn-remove" class="glyphicon glyphicon-remove"></span></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<form asp-action="Usuario" method="POST">
    <div id="delete-modal-user" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Confirmação</h4>
                </div>
                <div class="modal-body">
                    <p>Deseja realmente excluir o cadastro do usuário?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" id="confirma-exclusao" class="btn btn-danger">Excluir</button>
                    <button type="button" id="btn-cancelar-exclusao" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/Usuario/Index.js"></script>